<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Pago de Factura</title>
    <%- include('partials/header') %>
    <%- include('components/sidebar') %>
</head>
<body>
    <main class="dashboard-main">
        <%- include('components/navbar') %>
        <%- include('components/scripts') %>

        <div class="dashboard-main-body">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-24">
                <h6 class="fw-semibold mb-0">Pago de Servicio</h6>
                <ul class="d-flex align-items-center gap-2">
                    <li class="fw-medium">
                        <a href="/" class="d-flex align-items-center gap-1 hover-text-primary">
                            <iconify-icon icon="solar:home-smile-angle-outline" class="icon text-lg"></iconify-icon>
                            Volver a Inicio
                        </a>
                    </li>
                    <li>-</li>
                    <li class="fw-medium">Pago de Servicio</li>
                </ul>
            </div>

            <div class="row">
                <!-- Detalles de la Factura -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100 p-0 radius-12 overflow-hidden">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Detalles de la Factura</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="text-muted">Servicio</h6>
                                <p class="fw-semibold"><%= factura.PayService.nombre %></p>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-muted">Descripción</h6>
                                <p><%= factura.PayService.descripcion %></p>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-muted">Número de Cuenta</h6>
                                <p><%= factura.numero_cuenta %></p>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-muted">Estado</h6>
                                <% if (new Date(factura.estado) < new Date()) { %>
                                    <span class="badge bg-danger">Vencido</span>
                                <% } else if (factura.estado === 'pendiente') { %>
                                    <span class="badge bg-warning">Pendiente</span>
                                <% } else { %>
                                    <span class="badge bg-success">Al día</span>
                                <% } %>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-muted">Monto a Pagar</h6>
                                <p class="fw-semibold">$<%= factura.monto %></p>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-muted">Fecha de Emisión</h6>
                                <p class="fw-semibold"><%= new Date(factura.fecha_emision).toLocaleDateString('es-ES', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric'
                                }) %></p>
                            </div>
                            <div class="mb-3">
                                <h6 class="text-muted">Fecha de Vencimiento</h6>
                                <p class="fw-semibold"><%= new Date(factura.fecha_vencimiento).toLocaleDateString('es-ES', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric'
                                }) %></p>
                            </div>
                            
                        </div>
                    </div>
                </div>

                <!-- Formulario de Pago -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100 p-0 radius-12 overflow-hidden">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Datos de Pago</h5>
                        </div>
                        <div class="card-body">
                            <form id="formPago" class="needs-validation" novalidate>
                                <input type="hidden" name="pay_service_id" value="<%= factura.pay_service_id %>">
                                <input type="hidden" name="monto" value="<%= factura.monto %>">
                                
                                <!-- Datos de la Tarjeta -->
                                <div class="mb-3">
                                    <label class="form-label">Número de Tarjeta <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="numero_tarjeta" required 
                                           pattern="[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{4}" placeholder="1234-5678-9012-3456"
                                           oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 16).replace(/(\d{4})(?=\d)/g, '$1-')">
                                    <div class="invalid-feedback">
                                        Por favor ingrese un número de tarjeta válido (16 dígitos)
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label">Fecha de Vencimiento <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="vencimiento" required 
                                               pattern="(0[1-9]|1[0-2])\/([0-9]{2})" placeholder="MM/YY"
                                               oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 4).replace(/(\d{2})(\d{0,2})/, '$1/$2')">
                                        <div class="invalid-feedback">
                                            Por favor ingrese una fecha válida (MM/YY)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">CVV <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="cvv" required 
                                               pattern="[0-9]{3,4}" placeholder="123"
                                               oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 4)">
                                        <div class="invalid-feedback">
                                            Por favor ingrese un CVV válido (3 o 4 dígitos)
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Nombre en la Tarjeta <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="nombre_tarjeta" required
                                           oninput="this.value = this.value.replace(/[^a-zA-Z\s]/g, '')">
                                    <div class="invalid-feedback">
                                        Por favor ingrese el nombre que aparece en la tarjeta
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary" id="btnPagar">
                                        Realizar Pago
                                    </button>
                                    <a href="/" class="btn btn-outline-secondary">
                                        Cancelar
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/pagos.js"></script>
</body>
</html>

